<div class="card">
  <%# <%= link_to image_tag("プロトタイプの画像", class: :card__img ), root_path%>
  <div class="card__body">
    <%= link_to pantry.name, root_path, class: :card__title%>
    <p class="card__summary">
      <%= pantry.description %>
    </p>
    <%= link_to "by #{pantry.user.nickname} ", user_path(id: current_user.id), class: :card__user %>
    <%= link_to "パントリーの削除", pantry_path(id: pantry.id), method: :delete, class: :nav__btn%>
    <%= link_to "編集", edit_pantry_path(id: pantry.id), class: :nav__btn %>
  </div>
</div>