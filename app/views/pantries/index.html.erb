<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
       <div class="greeting"> 
        <%= "こんにちは、" %>
        <%= link_to "#{current_user.nickname}さん", user_path(current_user.id), class: :greeting__link%>
        </div>
        <h2 class="page-heading" ><%= link_to "New Pantry", new_pantry_path, class: :nav__btn %></h2>
    <% end %>
    <div class="card__wrapper">
      <% @pantry.each do |pantry|%>
      <%= render partial: "pantry", locals: {pantry:pantry} %>
      <% end %>
    </div>  
  </div>
</main>
