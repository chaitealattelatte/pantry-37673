<div class="contents row">
  <div class="container">
    <h2>ユーザーの編集</h2>
    <%= form_with model: current_user, id: 'new_user', class: 'new_user', local: true do |f| %>
       <%= render "devise/shared/error_messages", resource: current_user %>

      <div class="field">
        <%= f.label :nickname %> <em>(6 characters maximum)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
      </div>
      
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :family_name %><br />
        <%= f.text_field :family_name %>
      </div>

       <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </div>

      <div class="actions">
        <%= f.submit "Update" ,class: :nav__btn%>
      </div>
    <% end %>
  </div>
</div>